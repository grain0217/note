extends ../admin_layout
block content
    .container
        .row
        .col-md-7
        table.table-hover.table-bordered.col-md-12
            thread
                tr
                    th 博客标题
                    th 查看
                    th 更新
                    th 删除
            tbody
                each item in blogs
                    tr(class='item-id-#{item._id}')
                        td #{item.title}
                        td: a(target='_blank',href='../read/#{item._id}') 查看
                        td: a(target='_blank',href='../admin/update/#{item._id}') 编辑
                        td
                            button.btn.btn-danger.del(type='button',data-id='#{item._id}') 删除
    script(src='/js/admin.js')